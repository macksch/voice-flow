{
  "name": "voiceflow",
  "productName": "VoiceFlow",
  "version": "0.5.0",
  "description": "Multi-platform dictation suite with AI integration",
  "main": "main.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/macksch/voice-flow"
  },
  "scripts": {
    "start": "electron-forge start",
    "dev": "electron .",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "dist": "node scripts/fix_icon.js && electron-builder",
    "test": "vitest",
    "audit": "npm audit --audit-level=high",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write ."
  },
  "keywords": [
    "dictation",
    "transcription",
    "productivity",
    "electron",
    "ai",
    "groq"
  ],
  "author": "Maximilian Osthoff",
  "license": "MIT",
  "build": {
    "appId": "com.macksch.voiceflow",
    "productName": "VoiceFlow",
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "assets/icons/icon.ico"
    },
    "nsis": {
      "oneClick": true,
      "allowToChangeInstallationDirectory": false,
      "createDesktopShortcut": true
    },
    "publish": [
      {
        "provider": "github",
        "owner": "macksch",
        "repo": "voice-flow"
      }
    ]
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.2.0",
    "@electron-forge/maker-deb": "^7.2.0",
    "@electron-forge/maker-rpm": "^7.2.0",
    "@electron-forge/maker-squirrel": "^7.2.0",
    "@electron-forge/maker-zip": "^7.2.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^17.0.0",
    "jsdom": "^27.4.0",
    "png-to-ico": "^3.0.1",
    "prettier": "^3.8.0",
    "sharp": "^0.34.5",
    "vitest": "^4.0.17"
  },
  "dependencies": {
    "electron-log": "^5.1.0",
    "electron-squirrel-startup": "^1.0.0",
    "electron-store": "^8.2.0",
    "electron-updater": "^6.1.7",
    "jimp": "^1.6.0"
  }
}